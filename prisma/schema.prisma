generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}


//UNMIGRATED

model Toko {
  id String @id @default(cuid())
  name String @unique
  address String
  description String?
  image String
  makanan Makanan[]
  partner Boolean @default(false)
  kontak Kontak?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Kontak {
  id String @id @default(cuid())
  tokoId String?
  toko Toko? @relation(fields: [tokoId], references: [id])
  nomor Int?
  website String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Makanan {
  id String @id @default(cuid())
  tokoId String?
  toko Toko? @relation(fields: [tokoId], references: [id])
  name String
  price Int 
  image String?
  popular Boolean @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

